{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "Node",
    "types": ["node", "vite/client"],
    "baseUrl": ".",
    "outDir": "dist_types",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
  ]
}